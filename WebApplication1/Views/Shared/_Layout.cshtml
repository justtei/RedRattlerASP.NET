@using UserManagementSystem.Localization
@using UserManagementSystem.Web.Helpers;
@using UserManagementSystem.Web.Models
<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
<link href="/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css">
<link href="/Content/site.css" rel="stylesheet" type="text/css">
    @Url.Css("dialog.css")
    @RenderSection("css", false)
<style>
.navbar.navbar-fixed-top{
background-color:dodgerblue;
}
.navbar-inner .container{
	background-color:dodgerblue;
}
	.navbar .nav>li>a{
	color:black;
	transition:all ease-in-out 0.3s;
text-shadow: 0 0px 0 #fff;	
font-weight:700;
}
	.navbar .nav>li>a:hover{
	 text-decoration: underline;	
}
</style>
</head>

<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                @Html.Partial("Partials/_Navigation")
                @Html.Partial("Partials/_LogOn", new LogOnViewModel())
            </div>
        </div>
    </div>
    
    <div id="overlay">
        <div id="overlayBackground">
        </div>
        <div id="overlayImage">
            <img src="@Url.Content("~/Content/images/loader_overlay.gif")" alt="@StaticContent.Txt_PleaseWait"/>
        </div>
    </div>

    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; NPMG @DateTime.Now.Year</p>
        </footer>
    </div>
    
    <div id="server-error-modal" title="@ErrorMessages.Error">
        <p class="red-color">@ErrorMessages.ApplicationError</p>
    </div>

    @Url.Script("jquery-3.5.1.min.js")
<script src="/Scripts/bootstrap/bootstrap.min.js" type="text/javascript"></script>
    @RenderSection("scripts", false)
</body>
</html>
