@using MSLivingChoices.Entities.Client.Enums
@using MSLivingChoices.Mvc.Uipc.Client.Helpers
@model List<MSLivingChoices.Mvc.Uipc.Client.ViewModels.HomeVm>

<div class="floor-plan">
    <div class="grid-row header">
        <div class="col-any-7">
            Home
        </div>
        <div class="col-any-5">
            Address
        </div>
        <div class="col-any-4">
            Layout
        </div>
        <div class="col-any-5">
            Price
        </div>
        <div class="col-any-3 txt-center">
            Availability
        </div>
    </div>
    <ul class="list-unstyled">
        @foreach (var home in Model)
        {
            <li class="vpad-s row"
                data-toggle="community-unit"
                data-unit-id="@home.Id">
                <div class="grid-row row-wrap">
                    <div class="col-any-3 @(home.DisplayProperties.Image ? "view-large icon-search" : string.Empty)">
                        @if (home.DisplayProperties.Image)
                        {
                            @RenderHelper.Thumbnail(home.Image)
                        }
                    </div>
                    <div class="col-any-4">
                        @if (home.DisplayProperties.Name)
                        {
                            <strong>@home.Name</strong>
                        }
                        @if (home.DisplayProperties.SaleType)
                        {
                            <div class="txt-black">@home.SaleType</div>
                        }
                    </div>
                    <div class="col-any-5">
                        @if (home.DisplayProperties.Address)
                        {
                            <strong>@home.Address.Line</strong>
                            <div class="txt-black">
                                <span>@home.Address.City</span>
                                <span>@home.Address.StateCode</span>
                                <span>@home.Address.Zip</span>
                            </div>
                        }
                    </div>
                    <div class="col-any-4">
                        @if (home.Area.IsValued)
                        {
                            <strong>@home.Area.Value</strong>
                            <span class="txt-black">@home.Area.Unit</span>
                        }
                        @if (home.Beds.IsValued)
                        {
                            <div class="txt-black">
                                <span class="txt-bold">@home.Beds.Value</span>
                                <span>@home.Beds.Unit</span>
                            </div>
                        }
                        @if (home.Bathes.IsValued)
                        {
                            <div class="txt-black">
                                <span class="txt-bold">@home.Bathes.Value</span>
                                <span>@home.Bathes.Unit</span>
                            </div>
                        }
                    </div>
                    <div class="col-any-5">
                        <ul class="list-unstyled">
                            @if (home.DisplayProperties.Price)
                            {
                                <li class="strong">@home.Price</li>
                            }
                            @if (home.DisplayProperties.ApplicationFee)
                            {
                                <li class="txt-decr">Fees: @home.ApplicationFee</li>
                            }
                            @if (home.DisplayProperties.Deposit)
                            {
                                <li class="txt-decr">Deposit: @home.Deposit</li>
                            }
                            @if (home.DisplayProperties.PetDeposit)
                            {
                                <li class="txt-decr">Pet Deposit: @home.PetDeposit</li>
                            }
                        </ul>
                    </div>
                    <div class="col-any-3">
                        @if (home.DisplayProperties.LeadForm)
                        {
                            <button class="btn btn-block btn-brand-red cropped"
                                    data-toggle="lead-form"
                                    data-accessor="attr"
                                    data-inquiry="@Convert.ToInt32(InquiryType.Home)"
                                    data-unit-id="@home.Id"
                                    data-message="@home.GetLeadFormMessage()">
                                Check
                            </button>
                        }
                    </div>
                </div>
                @if (home.DisplayProperties.Amenities)
                {
                    <div class="col-any-24 ind">
                        <h4 class="header-brand-red">Features and Amenities</h4>
                        <ul class="list-col-any-3 amenities">
                            @foreach (var amenity in home.Amenities)
                            {
                                <li>@amenity</li>
                            }
                        </ul>
                    </div>
                }
                @if (home.DisplayProperties.Description)
                {
                    <div class="col-any-24 ind">
                        <h4 class="header-brand-red">Description</h4>
                        <p>@home.Description</p>
                    </div>
                }
            </li>
        }
    </ul>
</div>