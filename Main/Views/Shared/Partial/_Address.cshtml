@using UserManagementSystem.Localization
@model UMSSLCNEW.Web.Models.AddressViewModel
<div id="FullAddress" class="control-group">
    @Html.HiddenFor(model => model.AddressId)
    @Html.HiddenFor(model => model.CreateUserId)
    <div class="control-label">
        @Html.LabelFor(model => model.SelectedCountryID)
        <span class="asterisk">*</span>
    </div>
    <div class="controls">
        @Html.DropDownListFor(model => model.SelectedCountryID, Model.Countries, StaticContent.WtrMrk_SelectCountry, new ViewDataDictionary { new KeyValuePair<string, object>("data-url", Url.Action("GetStates", "Location")) })
        @Html.ValidationMessageFor(model => model.SelectedCountryID)
    </div>
    <div class="control-label">
        @Html.LabelFor(model => model.SelectedStateID)
        <span class="asterisk">*</span>
    </div>
    <div class="controls">
        @Html.DropDownListFor(model => model.SelectedStateID, Model.States, StaticContent.WtrMrk_SelectState, new ViewDataDictionary { new KeyValuePair<string, object>("data-url", Url.Action("GetCities", "Location")) })
        @Html.ValidationMessageFor(model => model.SelectedStateID)
    </div>
    <div class="control-label">
        @Html.LabelFor(model => model.SelectedCityID)
        <span class="asterisk">*</span>
    </div>
    <div class="controls">
        @Html.DropDownListFor(model => model.SelectedCityID, Model.Cities, StaticContent.WtrMrk_SelectCity)
        @Html.ValidationMessageFor(model => model.SelectedCityID)
    </div>
    <div class="control-label">
        @Html.LabelFor(model => model.Zip)
        <span class="asterisk">*</span>
    </div>
    <div class="controls">
        @Html.TextBoxFor(model => model.Zip)
        @Html.ValidationMessageFor(model => model.Zip)
    </div>
    <div class="control-label">
        @Html.LabelFor(model => model.Address)
        <span class="asterisk">*</span>
    </div>
    <div class="controls">
        @Html.TextBoxFor(model => model.Address)
        @Html.ValidationMessageFor(model => model.Address)
    </div>
</div>